# PolyScope Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# REQUIRED: API Authentication
# =============================================================================
# Comma-separated list of valid API keys (no spaces)
# Minimum 16 characters per key, alphanumeric with dashes/underscores
# Example: API_KEYS=prod-key-abc123,prod-key-def456
API_KEYS=your-api-key-1-min-16-chars,your-api-key-2-min-16-chars

# Optional: Admin API key for administrative operations
# Must be different from regular API keys
ADMIN_API_KEY=your-admin-api-key-min-16-chars

# =============================================================================
# OPTIONAL: Bankr Integration (for wallet features)
# =============================================================================
# Get your API key from https://bankr.bot
# BANKR_API_KEY=your-bankr-api-key

# =============================================================================
# OPTIONAL: Test Configuration (for development only)
# =============================================================================
# Wallet address for testing (must be a valid Ethereum address)
# Use placeholder for examples: 0x1234567890123456789012345678901234567890
TEST_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# Base URL for API tests
API_BASE=http://localhost:3000/api/v1

# =============================================================================
# OPTIONAL: API Server Configuration
# =============================================================================
# Port to run the API server on
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# CORS origin (set to your domain in production, or * for any)
# Production example: CORS_ORIGIN=https://polyscope.example.com
CORS_ORIGIN=*

# =============================================================================
# OPTIONAL: Rate Limiting
# =============================================================================
# Redis URL for distributed rate limiting (optional, recommended for production)
# REDIS_URL=redis://localhost:6379

# Rate limit per IP (requests per minute)
IP_RATE_LIMIT=100

# Rate limit per API key (requests per minute)
API_KEY_RATE_LIMIT=1000

# =============================================================================
# OPTIONAL: Polymarket Configuration
# =============================================================================
# Polymarket CTF Contract (default is mainnet)
# This is a public contract address
POLYMARKET_CTF_CONTRACT=0x4D97DCd97eC945f40cF65F87097CCe65DaBCFB54

# =============================================================================
# UI Configuration (for React frontend)
# =============================================================================
# API URL for the UI to connect to
VITE_API_URL=http://localhost:3000/api/v1

# Optional: Custom RPC for ENS resolution (defaults to Cloudflare)
# VITE_RPC_URL=https://cloudflare-eth.com