{
  "name": "polyscope",
  "version": "2.0.0",
  "description": "PolyScope - Modern analytics platform for Polymarket prediction markets",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:api": "npm run dev -w packages/api",
    "dev:ui": "npm run dev -w packages/ui",
    "build": "echo 'Static build - no compilation needed'",
    "build:ui": "npm run build -w packages/ui",
    "start": "npm run start -w packages/api",
    "test": "npm run test -w packages/api",
    "test:stress": "npm run test:stress -w packages/api",
    "lint": "npm run lint -w packages/api && npm run lint -w packages/ui",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules"
  },
  "keywords": [
    "polymarket",
    "prediction-markets",
    "analytics",
    "trading",
    "defi"
  ],
  "author": "PolyScope Team",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}